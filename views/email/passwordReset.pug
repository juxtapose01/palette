extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? Click the link below to reset your password.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`http://127.0.0.1:3000/resetPassword/${token}`, target='_blank') Reset your password
  p If you didn't forget your password, please ignore this email.
