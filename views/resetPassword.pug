extends base

block content
  main.main
    .login-form.form--resetpassword
      h2.heading-secondary.ma-bt-lg Reset Your Password
      form.form.form--password-reset(action=`/api/v1/users/resetPassword/${token}`, method='POST')
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', name='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='confirmPassword') Confirm Password
          input#confirmPassword.form__input(type='password', name='confirmPassword', placeholder='••••••••', required, minlength='8')  
        .form__group
          button.btn.btn--green(type='submit') Reset my password
